# Nexograph Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Upstage API Configuration
# ============================================================================
# Get your API key from: https://console.upstage.ai/
UPSTAGE_API_KEY=up_xxxxxxxxxxxxxxxxxxxxxxxx
UPSTAGE_BASE_URL=https://api.upstage.ai/v1

# ============================================================================
# Qdrant Vector Database Configuration
# ============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=nexograph_documents

# ============================================================================
# Application Configuration
# ============================================================================
APP_ENV=development
APP_DEBUG=true
APP_VERSION=0.1.0

# ============================================================================
# Database Configuration (SQLite)
# ============================================================================
# Path is relative to project root
DATABASE_URL=sqlite:///./data/db/nexograph.db

# ============================================================================
# LightRAG Configuration
# ============================================================================
# Working directory for LightRAG graph data
LIGHTRAG_WORKING_DIR=./data/lightrag

# ============================================================================
# Optional: Backup LLM Configuration (for future phases)
# ============================================================================
# OPENAI_API_KEY=sk-xxxxxxxx
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxx
